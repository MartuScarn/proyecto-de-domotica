<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".regi"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:width="600dp"
        android:height="70dp"
        android:text="Ingrese los datos del dispositivo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Ingrese el nombre del dispositivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317" />



    <Button
        android:id="@+id/btn_regitrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Registrar dispositivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <TableRow
        android:layout_width="348dp"
        android:layout_height="360dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="266dp"


    <CheckBox
        android:id="@+id/lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:text="l"
        app:layout_constraintEnd_toEndOf="@+id/martes"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <CheckBox
        android:id="@+id/martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        app:layout_constraintEnd_toEndOf="@+id/miercoles"
        app:layout_constraintStart_toStartOf="@+id/lunes"
    />

    <CheckBox
        android:id="@+id/miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mi"
        app:layout_constraintEnd_toEndOf="@+id/jueves"
        app:layout_constraintStart_toStartOf="@+id/martes"
    />

    <CheckBox
        android:id="@+id/jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="j"
        app:layout_constraintEnd_toEndOf="@+id/viernes"
        app:layout_constraintStart_toStartOf="@+id/miercoles"
    />

    <CheckBox
        android:id="@+id/viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        app:layout_constraintEnd_toEndOf="@+id/sabado"
        app:layout_constraintStart_toStartOf="@+id/jueves"
    />

    <CheckBox
        android:id="@+id/sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        app:layout_constraintEnd_toEndOf="@+id/domingo"
        app:layout_constraintStart_toStartOf="@+id/viernes"

        />

    <CheckBox
        android:id="@+id/domingo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginEnd="5dp"
        android:text="d"
        app:layout_constraintEnd_toEndOf="@+id/sabado"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="285dp" />
        />


</androidx.constraintlayout.widget.ConstraintLayout>